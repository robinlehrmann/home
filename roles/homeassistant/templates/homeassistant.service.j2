[Unit]
Description=Home Assistant
After=network-online.target

[Service]
Type=simple
User={{ homeassistant_user }}
WorkingDirectory=/home/{{ homeassistant_user }}/.homeassistant
ExecStart=/usr/local/bin/hass -c "/home/{{ homeassistant_user }}/.homeassistant"
RestartForceExitStatus=100

[Install]
WantedBy=multi-user.target
